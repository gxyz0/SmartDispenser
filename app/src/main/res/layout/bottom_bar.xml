<?xml version="1.0" encoding="utf-8"?>
<nl.joery.animatedbottombar.AnimatedBottomBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottom_bar_bg"
    app:abb_iconSize="36dp"
    app:abb_indicatorAppearance="round"
    app:abb_indicatorColor="@color/bottom_bar_select"
    app:abb_indicatorHeight="6dp"
    app:abb_indicatorMargin="10dp"
    app:abb_rippleEnabled="true"
    app:abb_selectedIndex="0"
    app:abb_selectedTabType="text"
    app:abb_tabColorSelected="@color/bottom_bar_select"
    app:abb_tabs="@menu/tabs"
    app:abb_textSize="24dp"
    app:abb_textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent" />

